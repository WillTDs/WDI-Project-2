<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 box">
      <div class="teamEditBox">
        <form method="POST" action="/teams/<%= team.id %>">
          <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
              <label>Team Name</label>
              <input class="form-control" type="text" name="name" value="<%= team.name %>">
            </div>
            <div class="form-group">
              <label>Shirt Colour</label>
              <input type="color" name="color" value="<%= team.color %>">
            </div>
            <label>Where do you want to play:</label>
            <% venues.forEach((venue)=> { %>
              <div class="form-group">
                <label class="form-check-label">
                <input class="form-check-input" type="checkbox" name="venues" value="<%= venue.id %>" <% if(team.venues.some(_venue => _venue.id === venue.id)) { %>checked<% } %> > <%= venue.name %>
                </label>
              </div>
            <% }) %>
          <button class="btn btn-success">Update</button>
        </form>
      </div>
    </div>
  </div>
</div>
